{
    "compilerOptions": {
        "target": "ES2022",
        "rootDir": "./",
        "module": "ESNext",
        "moduleResolution": "node",
        "types": ["node"],
        "strict": true,
        "declaration": true,
        "declarationMap": true,
        "outDir": "./dist",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    },
    "include": [
        "*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
