{
    "compilerOptions": {
        "target": "esnext",
        "lib": [
            "esnext",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "allowJs": true,
        "checkJs": true,
        "strict": true,
        "noEmit": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "verbatimModuleSyntax": true,
        "skipLibCheck": true
    },
    "include": [
        "./index.ts",
        "./components/**/*.ts",
        "./components/**/*.svelte",
        "./icons/**/*.ts",
        "./icons/**/*.svelte",
        "./utils/**/*.ts",
        "tailwind.config.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        ".turbo"
    ]
}
